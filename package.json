{
  "name": "fizz-buzz",
  "version": "1.0.0",
  "description": "Simple Demo Project for TDD in TypeScript using Jest and ESLint",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node index.ts",
    "test": "jest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "eqeqeq": "error",
      "@typescript-eslint/explicit-module-boundary-types": "error"
    }
  },
  "jest": {
    "preset": "ts-jest"
  }
}
