{
  "name": "fizz-buzz",
  "version": "1.0.0",
  "description": "Simple Demo Project for TDD in TypeScript using Jest and ESLint",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node index.ts",
    "test": "jest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "jest": "^27.4.4",
    "ts-jest": "^27.1.1"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": ["error", "always-multiline"],
      "eqeqeq": "error",
      "@typescript-eslint/explicit-module-boundary-types": "error"
    }
  },
  "jest": {
    "preset": "ts-jest"
  }
}
